{
  "productName": "Bridge",
  "directories": {
    "output": "release/"
  },
  "files": [
    "dist/**/*"
  ],
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "shortcutName": "Bridge"
  },
  "win": {
    "icon": "dist/assets/images/system/icons/win/icon.ico",
    "compression": "store"
  },
  "mac": {
    "category": "public.app-category.utilities",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "dist/assets/images/system/icons/mac/icon.icns"
  },
  "linux": {
    "compression": "maximum",
    "target": [
      "AppImage"
    ],
    "category": "utility"
  }
}